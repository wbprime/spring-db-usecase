<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.wbprime.springdbusecase.hibernate.xml.models">

    <class name="Ping" table="pings" >
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="createTime" not-null="false">
            <column name="create_time" not-null="true" default="now()" sql-type="datetime" />
        </property>
    </class>

</hibernate-mapping>
